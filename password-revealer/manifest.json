{
    "manifest_version": 2,
    "name": "Password Revealer",
    "description": "Show password entered in password inputs",
    "version": "1",
    "background": {
        "scripts": [
            "background.js"
        ]
    },
    "browser_action": {
        "default_title": "Password Revealer"
    },
    "commands": {
      "_execute_browser_action": {
        "suggested_key": {
          "default": "Alt+P",
          "windows": "Alt+P",
          "mac": "Alt+P",
          "linux": "Alt+P"
        }
      }
    },
    "permissions": ["tabs", "http://*/*", "https://*/*", "file:///*"],
    "icons": {
        "128": "favicon.png"
    }
}
